{
  "family": "med-connecter",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "med-connecter",
      "image": "YOUR_ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/med-connecter:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "8080"
        },
        {
          "name": "FRONTEND_URL",
          "value": "https://your-frontend-domain.com"
        },
        {
          "name": "LOG_LEVEL",
          "value": "info"
        },
        {
          "name": "SWAGGER_ENABLED",
          "value": "true"
        },
        {
          "name": "API_URL",
          "value": "https://your-api-domain.com"
        },
        {
          "name": "EMAIL_HOST",
          "value": "smtp.gmail.com"
        },
        {
          "name": "EMAIL_PORT",
          "value": "587"
        },
        {
          "name": "EMAIL_SECURE",
          "value": "false"
        },
        {
          "name": "EMAIL_FROM",
          "value": "noreply@medconnecter.com"
        },
        {
          "name": "SMS_PROVIDER",
          "value": "twilio"
        },
        {
          "name": "SMS_FROM",
          "value": "+1234567890"
        },
        {
          "name": "BIG_REGISTER_API_URL",
          "value": "https://api.bigregister.nl/v1"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        },
        {
          "name": "VIDEO_CALL_PROVIDER",
          "value": "twilio"
        },
        {
          "name": "CLOUD_STORAGE_PROVIDER",
          "value": "aws"
        },
        {
          "name": "CLOUD_STORAGE_REGION",
          "value": "us-east-1"
        },
        {
          "name": "ENABLE_EMAIL_NOTIFICATIONS",
          "value": "true"
        },
        {
          "name": "ENABLE_SMS_NOTIFICATIONS",
          "value": "true"
        },
        {
          "name": "ENABLE_PUSH_NOTIFICATIONS",
          "value": "true"
        },
        {
          "name": "CORS_ORIGIN",
          "value": "https://your-frontend-domain.com"
        }
      ],
      "secrets": [
        {
          "name": "MONGODB_URI",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:med-connecter/mongodb-uri"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:med-connecter/jwt-secret"
        },
        {
          "name": "EMAIL_USER",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:med-connecter/email-user"
        },
        {
          "name": "EMAIL_PASS",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:med-connecter/email-pass"
        },
        {
          "name": "SMS_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:med-connecter/sms-api-key"
        },
        {
          "name": "BIG_REGISTER_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:med-connecter/big-register-api-key"
        },
        {
          "name": "AWS_ACCESS_KEY_ID",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:med-connecter/aws-access-key-id"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:med-connecter/aws-secret-access-key"
        },
        {
          "name": "AWS_S3_BUCKET_NAME",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:med-connecter/aws-s3-bucket-name"
        },
        {
          "name": "AWS_SQS_QUEUE_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:med-connecter/aws-sqs-queue-url"
        },
        {
          "name": "AWS_SNS_TOPIC_ARN",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:med-connecter/aws-sns-topic-arn"
        },
        {
          "name": "VIDEO_CALL_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:med-connecter/video-call-api-key"
        },
        {
          "name": "VIDEO_CALL_API_SECRET",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:med-connecter/video-call-api-secret"
        },
        {
          "name": "ADMIN_EMAIL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:med-connecter/admin-email"
        },
        {
          "name": "ADMIN_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:med-connecter/admin-password"
        },
        {
          "name": "CLOUD_STORAGE_BUCKET",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:med-connecter/cloud-storage-bucket"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/med-connecter",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "node -e \"require('http').get('http://localhost:8080/health', (res) => { process.exit(res.statusCode === 200 ? 0 : 1) })\""
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
} 