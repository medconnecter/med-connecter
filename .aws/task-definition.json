{
  "family": "med-connecter",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::{{AWS_ACCOUNT_ID}}:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::{{AWS_ACCOUNT_ID}}:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "med-connecter",
      "image": "{{AWS_ACCOUNT_ID}}.dkr.ecr.{{AWS_REGION}}.amazonaws.com/med-connecter:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "8080"
        },
        {
          "name": "FRONTEND_URL",
          "value": "https://your-frontend-domain.com"
        },
        {
          "name": "LOG_LEVEL",
          "value": "info"
        },
        {
          "name": "SWAGGER_ENABLED",
          "value": "true"
        },
        {
          "name": "API_URL",
          "value": "https://your-api-domain.com"
        },
        {
          "name": "SMTP_HOST",
          "value": "smtp.gmail.com"
        },
        {
          "name": "SMTP_PORT",
          "value": "587"
        },
        {
          "name": "SMTP_SECURE",
          "value": "false"
        },
        {
          "name": "EMAIL_FROM",
          "value": "noreply@medconnecter.com"
        },
        {
          "name": "SMS_PROVIDER",
          "value": "twilio"
        },
        {
          "name": "SMS_FROM",
          "value": "+1234567890"
        },
        {
          "name": "BIG_REGISTER_API_URL",
          "value": "https://api.bigregister.nl/v1"
        },
        {
          "name": "AWS_REGION",
          "value": "{{AWS_REGION}}"
        },
        {
          "name": "VIDEO_CALL_PROVIDER",
          "value": "twilio"
        },
        {
          "name": "CLOUD_STORAGE_PROVIDER",
          "value": "aws"
        },
        {
          "name": "CLOUD_STORAGE_REGION",
          "value": "{{AWS_REGION}}"
        },
        {
          "name": "ENABLE_EMAIL_NOTIFICATIONS",
          "value": "true"
        },
        {
          "name": "ENABLE_SMS_NOTIFICATIONS",
          "value": "true"
        },
        {
          "name": "ENABLE_PUSH_NOTIFICATIONS",
          "value": "true"
        },
        {
          "name": "CORS_ORIGIN",
          "value": "https://your-frontend-domain.com"
        },
        {
          "name": "MONGO_URI",
          "value": "{{MONGODB_URI}}"
        },
        {
          "name": "SMTP_HOST",
          "value": "smtp.gmail.com"
        },
        {
          "name": "SMTP_PORT",
          "value": "587"
        },
        {
          "name": "SMTP_SECURE",
          "value": "false"
        },
        {
          "name": "SMTP_FROM",
          "value": "noreply@medconnecter.com"
        }
      ],
      "secrets": [
        {
          "name": "MONGODB_URI",
          "valueFrom": "arn:aws:secretsmanager:{{AWS_REGION}}:{{AWS_ACCOUNT_ID}}:secret:med-connecter/mongodb-uri"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:{{AWS_REGION}}:{{AWS_ACCOUNT_ID}}:secret:med-connecter/jwt-secret"
        },
        {
          "name": "SMTP_USER",
          "valueFrom": "arn:aws:secretsmanager:{{AWS_REGION}}:{{AWS_ACCOUNT_ID}}:secret:med-connecter/email-user"
        },
        {
          "name": "EMAIL_PASS",
          "valueFrom": "arn:aws:secretsmanager:{{AWS_REGION}}:{{AWS_ACCOUNT_ID}}:secret:med-connecter/email-pass"
        },

        {
          "name": "AWS_ACCESS_KEY_ID",
          "valueFrom": "arn:aws:secretsmanager:{{AWS_REGION}}:{{AWS_ACCOUNT_ID}}:secret:med-connecter/aws-access-key-id"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "valueFrom": "arn:aws:secretsmanager:{{AWS_REGION}}:{{AWS_ACCOUNT_ID}}:secret:med-connecter/aws-secret-access-key"
        },
        {
          "name": "AWS_S3_BUCKET_NAME",
          "valueFrom": "arn:aws:secretsmanager:{{AWS_REGION}}:{{AWS_ACCOUNT_ID}}:secret:med-connecter/aws-s3-bucket-name"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/med-connecter",
          "awslogs-region": "{{AWS_REGION}}",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "node -e \"require('http').get('http://localhost:8080/health', (res) => { process.exit(res.statusCode === 200 ? 0 : 1) })\""
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
} 